{
  "AllowedHosts": "*",
  "Serilog": {
    "Using": ["Serilog.Sinks.Console"],
    "MinimumLevel": "Debug",
    "WriteTo": [{ "Name": "Console" }],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "Conference": {
    "DefaultPermissions": {
      "Conference": {
        "chat.canSendMessage": true,
        "chat.canSendPrivateMessage": true,
        "chat.canSendAnonymousMessage": true,
        "rooms.canSwitchRoom": true
      },
      "Moderator": {

      },
      "BreakoutRoom": {

      }
    },
    "DefaultConfiguration": {
      "Chat": {
        "CancelParticipantIsTypingAfter": 30,
        "ShowTyping": true
      },
      "Scenes": {
        "OverlayScene": true,
        "HideParticipantsWithoutWebcam": false,
        "DefaultScene": "grid"
      }
    },
    "Authentication": {
      "Authority": "https://collaboidentity.goserp.co.uk",
      "NoSslRequired": true
    },
    "KeyValueDatabase": {
      "UseInMemory": true
    },
    "RabbitMq": {
      "UseInMemory": true
    },
    "MongoDb": {
      "ConnectionString": "mongodb://localhost:27017",
      "DatabaseName": "Strive",
      "CollectionNames": {
        "Conference": "Conference"
      }
    },
    "SFU": {
      "UrlTemplate": "https://sfu.goserp.co.uk/{0}",
      "TokenSecret": "ae2c687f875a47c99e3a05096badbac6",
      "ApiKey": "testApiKey"
    }

  }
}
